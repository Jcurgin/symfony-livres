{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Liste des catégories</h1>

    <div class="text-end mb-3">
        <a href="{{ path('app_category_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Ajouter une catégorie
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Nom</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td class="text-end">
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-outline-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2" class="text-center">Aucune catégorie trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="mb-4 text-end">
    <a href="{{ path('app_book_index') }}" class="btn btn-outline-secondary">
        ← Retour à l’accueil
    </a>
</div>
</div>

{% endblock %}
