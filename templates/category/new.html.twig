{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="container mt-4">
            <h1 class="text-center mb-4">Nouvelle catégorie</h1>

            <div class="card mx-auto shadow" style="max-width: 500px;">
                <div class="card-body">
                    {{ include('category/_form.html.twig', {'button_label': 'Créer'}) }}
                </div>
                <div class="card-footer text-end">
                    <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">← Retour à la liste</a>
                </div>
            </div>
        </div>
    {% endif %}    
{% endblock %}
